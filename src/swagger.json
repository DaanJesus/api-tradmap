{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "REST API",
        "description": "Decumentação da api",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "servers": [{
            "url": "http://localhost:8080/",
            "description": "API de testes"
        },
        {
            "url": "https://api-tradmap.herokuapp.com/",
            "description": "API de produção"
        }
    ],
    "basePath": "/",
    "paths": {
        "/trade/v1/lista": {
            "get": {
                "summary": "Carrega todos os stocks",
                "tags": [
                    "Stocks"
                ],
                "security": [{
                    "bearerAuth": []
                }],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Erro ao listar stocks."
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Stocks"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/trade/v1/stocks-favoritos": {
            "get": {
                "summary": "Carrega todos os stocks marcados como favoritos",
                "tags": [
                    "Stocks"
                ],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Erro ao listar stocks."
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Stocks"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/trade/v1/set-favorite/{id_trade}": {
            "put": {
                "tags": [
                    "Stocks"
                ],
                "description": "",
                "parameters": [{
                        "name": "id_trade",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "obj",
                        "in": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "favorito": {
                                    "example": "any"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/auth/v1/login": {
            "post": {
                "summary": "Login de usuário",
                "tags": [
                    "User"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "email": "adm@gmail.com",
                                        "password": "123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Usuário não encontrado."
                    },
                    "200": {
                        "description": "Usuário logado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/v1/register": {
            "post": {
                "summary": "Cadastro de usuário",
                "tags": [
                    "User"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "adm",
                                        "email": "adm@gmail.com",
                                        "password": "123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Email ja cadastrado."
                    },
                    "200": {
                        "description": "Usuário cadastrado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/v1/update-user/{id_user}": {
            "put": {
                "summary": "Atualização de usuário",
                "tags": [
                    "User"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "email": "adm@gmail.com",
                                        "password": "123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Usuário não encontrado."
                    },
                    "200": {
                        "description": "Usuário logado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "properties": {
                    "name": {
                        "type": "string",
                        "required": true
                    },
                    "email": {
                        "type": "string",
                        "required": true
                    },
                    "password": {
                        "type": "string",
                        "required": true
                    }
                }
            },
            "Stocks": {
                "properties": {
                    "stock": {
                        "type": "string",
                        "equired": true
                    },
                    "exchange": {
                        "type": "string",
                        "equired": true
                    },
                    "country": {
                        "type": "string",
                        "equired": true
                    },
                    "company": {
                        "type": "string",
                        "equired": true
                    },
                    "variation": {
                        "type": "number",
                        "equired": true
                    },
                    "price": {
                        "type": "number",
                        "equired": true
                    },
                    "favorito": {
                        "type": "boolean",
                        "default": false
                    },
                    "chart": {
                        "type": "array"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}